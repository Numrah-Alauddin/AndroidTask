<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.lenovo.a2ndtask.Friends">

    <ImageView
        android:id="@+id/user_icon_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/user_img3" />

    <TextView
        android:id="@+id/username_friendspage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_below="@id/user_icon_img"
        android:layout_centerHorizontal="true"
        android:text="John Smith"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_friendspage">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Friend_Heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Friends"
                android:textAllCaps="true"
                android:textColor="#1e6d9a"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Friend_Heading"
                android:orientation="vertical">

                <include layout="@layout/friendlist_layout" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="10dp"
                    android:background="#28c1f7" />

                <include layout="@layout/friendlist_layout" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="10dp"
                    android:background="#28c1f7" />

                <include layout="@layout/friendlist_layout" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="10dp"
                    android:background="#28c1f7" />

                <include layout="@layout/friendlist_layout" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="10dp"
                    android:background="#28c1f7" />

                <include layout="@layout/friendlist_layout" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="10dp"
                    android:background="#28c1f7" />

                <include layout="@layout/friendlist_layout" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="10dp"
                    android:background="#28c1f7" />

                <include layout="@layout/friendlist_layout" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="10dp"
                    android:background="#28c1f7" />

                <include layout="@layout/friendlist_layout" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="10dp"
                    android:background="#28c1f7" />

                <include layout="@layout/friendlist_layout" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="10dp"
                    android:background="#28c1f7" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_image"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="16dp"
            android:text="Home"
            android:textColor="#28c1f7" />

        <ImageView
            android:id="@+id/friend_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/friends" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/friend_img"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="12dp"
            android:text="Friends"
            android:textColor="#28c1f7" />

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/profile_img"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="14dp"
            android:text="Profile"
            android:textColor="#28c1f7" />


    </RelativeLayout>

</RelativeLayout>
