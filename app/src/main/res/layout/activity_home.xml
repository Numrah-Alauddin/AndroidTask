<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.a2ndtask.Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/home_user_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/user_img3" />

        <EditText
            android:id="@+id/home_post_et"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/home_user_img"
            android:layout_marginTop="16dp"
            android:layout_marginStart="6dp"
            android:focusableInTouchMode="true"
            android:hint="Whats on your mind" />

        <ImageView
            android:id="@+id/home_photos"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/post_photo" />

        <ImageView
            android:id="@+id/home_share_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:src="@drawable/practice"
            android:layout_below="@id/home_user_img"/>

        <Button
            android:id="@+id/home_share_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_share_photo"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="SHARE"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/post_list2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_share_btn"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

</ScrollView>



